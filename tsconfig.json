{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "skipLibCheck": false,
    "baseUrl": "./src", // Set the base directory for module resolution
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing (important for case-sensitive systems)
    "removeComments": true
  },
  "include": [
    "src/**/*.ts" // Include your source files
  ]
}
